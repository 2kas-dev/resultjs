{
  "name": "resultjs",
  "description": "",
  "license": "MIT",
  "type": "module",
  "main": "dist/result.js",
  "types": "dist/result.d.ts",
  "devDependencies": {
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@release-it/conventional-changelog": "^7.0.2",
    "bun-types": "latest",
    "cz-conventional-changelog": "^3.3.0",
    "dts-bundle-generator": "^8.0.1",
    "release-it": "^16.2.1",
    "husky": "^8.0.0"
  },
  "scripts": {
    "lint": "tsc",
    "test": "bun test",
    "build": "bun build ./src/result.ts --outdir ./dist --minify --sourcemap=external && bun run build:declaration",
    "build:declaration": "dts-bundle-generator -o ./dist/result.d.ts ./src/result.ts",
    "release": "release-it",
    "commit": "cz",
    "prepare": "husky install"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "keywords": [
    "resultjs"
  ],
  "version": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/2kas-dev/resultjs.git"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
